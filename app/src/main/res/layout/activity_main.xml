<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Button to Publish Message -->
    <Button
        android:id="@+id/buttonPublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publish Message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FF5722"
        android:foreground="?attr/selectableItemBackground" />

    <!-- Button G1 (Red) -->
    <Button
        android:id="@+id/buttonG1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G1"
        android:layout_below="@id/buttonPublish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF0000"
    android:foreground="?attr/selectableItemBackground"
    android:textColor="#FFFFFF"/>

    <!-- Button G2 (Green) -->
    <Button
        android:id="@+id/buttonG2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G2"
        android:layout_below="@id/buttonG1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
    android:foreground="?attr/selectableItemBackground"
    android:textColor="#FFFFFF"/>

    <!-- Button G3 (Blue) -->
    <Button
        android:id="@+id/buttonG3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G3"
        android:layout_below="@id/buttonG2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3F51B5"
    android:foreground="?attr/selectableItemBackground"
    android:textColor="#FFFFFF"/>

    <!-- R: First line (dòng 1) -->
    <TextView
        android:id="@+id/textViewR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R: "
        android:textSize="18sp"
        android:textColor="#FF0000"
        android:layout_below="@id/buttonG3"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"/>

    <!-- TextView for the first message -->
    <TextView
        android:id="@+id/textViewReceivedMessage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received message will be shown here"
        android:textSize="18sp"
        android:layout_toEndOf="@id/textViewR"
        android:layout_alignBaseline="@id/textViewR"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"/>

    <!-- G: Second line (dòng 2) -->
    <TextView
        android:id="@+id/textViewG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G: "
        android:textSize="18sp"
        android:textColor="#4CAF50"
        android:layout_below="@id/textViewR"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"/>

    <!-- TextView for the second message -->
    <TextView
        android:id="@+id/textViewReceivedMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received message will be shown here"
        android:textSize="18sp"
        android:layout_toEndOf="@id/textViewG"
        android:layout_alignBaseline="@id/textViewG"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"/>

    <!-- B: Third line (dòng 3) -->
    <TextView
        android:id="@+id/textViewB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B: "
        android:textSize="18sp"
        android:textColor="#3F51B5"
        android:layout_below="@id/textViewG"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"/>

    <!-- TextView for the third message -->
    <TextView
        android:id="@+id/textViewReceivedMessage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received message will be shown here"
        android:textSize="18sp"
        android:layout_toEndOf="@id/textViewB"
        android:layout_alignBaseline="@id/textViewB"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/btn_get_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="216dp"
        android:text="Get Token" />

</RelativeLayout>
